{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {
			"VARIANT": "3.13-bookworm"
		}
	},
	// get codex authentication into the container
	// also mount the system cache for uv to speed up installs
	"mounts": [
		"source=${localEnv:HOME}/.codex,target=/home/vscode/.codex,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.cache/uv,target=/home/vscode/.cache/uv,type=bind,consistency=cached"
	],
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"yzhang.markdown-all-in-one",
				"streetsidesoftware.code-spell-checker",
				"vscode-icons-team.vscode-icons",
				"mhutchie.git-graph",
				"njpwerner.autodocstring",
				"Gruntfuggly.todo-tree",
				"GitLab.gitlab-workflow",
				"stkb.rewrap",
				"ms-vsliveshare.vsliveshare",
				"sygene.auto-correct",
				"njqdev.vscode-python-typehint",
				"ryanluker.vscode-coverage-gutters",
				"tomoki1207.pdf",
				"ms-azuretools.vscode-docker",
				"tamasfe.even-better-toml",
				"redhat.vscode-yaml",
				"openai.chatgpt"
			]
		}
	},
	// add an environment variable so to make it easier to find the project root from a notebook
	"containerEnv": {
		"ProjectPath": "${containerWorkspaceFolder}",
		"WorkspaceFolder": "${containerWorkspaceFolder}",
		"UV_CACHE_DIR": "/home/vscode/.cache/uv"
	},
	// Fix the permissions - the devcontainer maps the user to the system user, so this needs to be done here.
	"onCreateCommand": ".devcontainer/fix_permissions.sh",
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": ".devcontainer/post_create.sh",
	"remoteUser": "vscode"
}